
.search{
  background-color:#fff ;
  width:100%;
  z-index: 10000;
  height: 40px;
}
.searchinput{
  background-color: #EFEFF4;
  height: 100%;
  color: #9c9c9c;
  font-size: 30rpx;
  border-radius: 25px;
}


.header{
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: lightgreen;
  margin-top: 5px;
  margin-bottom: 5px;
}
.swiper-container{
  position: relative;
}
.swiper{
  width: 100%;
  height: 170px;
}
.swiper image{
  width: 100%;
}
.sel{
  color: grey;
  margin-top: 5px;
}
.select-func{
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.func{
  height:50px;
  width: 15%;
  background-color: white;
  margin: 15px;
}
.func image{
  width: 100%;
  height: 100%;
}
.text{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  height: 1px;
  font-size: 12px;
}
.recommend{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.info{
  width: 45%;
  height: 150px;
  margin: 7px;
  position: relative;
  background-color: greenyellow;
}
.info image{
  width: 100%;
  height: 100%;
}
.desc{
  position: absolute;
  bottom: 0px;
  font-size: 12px;
  color: white;
  width: 100%;
  height: 40%;
  background:-webkit-linear-gradient(bottom,rgba(0, 0, 0, 0.7),rgba(0, 0, 0, 0));
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}